@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="dash-col col my-auto">
            <div class="dash-block">
                <form id="query-submit">
                    <h1>Submit a Query</h1>
                    <p>Keywords</p>
                    <textarea rows="4" cols="50" name="query-text" form="query-submit" style="font-size:14px;">Enter query here...</textarea>
                    <input value="SUBMIT" type="submit" style="width:20%;height:10%;color:black;font-size:14px;"/>
                </form>
            </div>
        </div>
        <div class="dash-col col my-auto">
            <div class="dash-block">
                <div id="dash-graph" style="text-align: center;">
                    <h1>Data Visualization Graph</h1>
                    <img id="bar-chart" src="~/bar-chart.jpg" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="dash-col col my-auto">
            <div class="dash-block">
                <form id="scan-submit">
                    <h1>Submit a Scan</h1>
                    <p>IP addresses or domain</p>
                    <textarea rows="4" cols="50" name="scan-text" form="scan-submit" style="font-size:14px;">10.204.250.104, mydomain.com</textarea>
                    <input type="submit" value="SUBMIT" style="width:20%;height:10%;color:black;font-size:14px;"/>
                </form>
            </div>
        </div>
        <div class="dash-col col my-auto">
