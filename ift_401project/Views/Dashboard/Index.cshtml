@{
    ViewData["Title"] = "Dashboard";
    Layout = "_DashboardLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="dash-col col my-auto">
            <div class="dash-block">
                <form id="query-submit">
                    <h1>Submit a Query</h1>
                    <p>Keywords</p>
                    <textarea rows="4" cols="50" name="query-text" form="query-submit">Enter query here...</textarea>
                    <input value="Submit" type="submit" />
                </form>
            </div>
        </div>
        <div class="dash-col col my-auto">
            <div class="dash-block">
                <div id="dash-graph" style="text-align: center;">
                    <h1>Data Visualization Graph</h1>
                    <img id="bar-chart" src="~/bar-chart.jpg" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="dash-col col my-auto">
            <div class="dash-block">
                <form id="scan-submit">
                    <h1>Submit a Scan</h1>
                    <p>IP addresses or domain</p>
                    <textarea rows="4" cols="50" name="query-text" form="query-submit">10.204.250.104, mydomain.com</textarea>
                    <input type="submit" value="Submit" />
                </form>
            </div>
        </div>
        <div class="dash-col col my-auto">
            <div class="dash-block">
                <h1 style="text-align:center; padding-top:20px;">Cybersecurity News Feed</h1>
                <div id="dash-news">
                        <div class="news-item">
                            <b>News Item Title 1</b>
                            <div class="news-text">
                                <p>Brief Description of News Item 1</p>
                            </div>
                            <hr />
                        </div>

                        <div class="news-item">
                            <b>News Item Title 2</b>
                            <div class="news-text">
                                <p>Brief Description of News Item 2</p>
                            </div>
                            <hr />
                        </div>

                        <div class="news-item">
                            <b>News Item Title 3</b>
                            <div class="news-text">
                                <p>Brief Description of News Item 3</p>
                            </div>
                            <hr />
                        </div>

                        <div class="news-item">
                            <b>News Item Title 4</b>
                            <div class="news-text">
                                <p>Brief Description of News Item 4</p>
                            </div>
                            <hr />
                        </div>

                        <div class="news-item">
                            <b>News Item Title 5</b>
                            <div class="news-text">
                                <p>Brief Description of News Item 5</p>
                            </div>
                            <hr />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
